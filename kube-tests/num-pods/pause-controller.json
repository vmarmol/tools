{
    "kind": "ReplicationController",
    "apiVersion": "v1beta3",
    "metadata": {
	"name": "pause-controller",
	"labels": {
	  "name": "pause"
	}
    },
    "spec": {
	"replicas": 0,
	"selector": {
            "name": "pause"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "name": "pause"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"name": "pause",
			"image": "kubernetes/pause:latest"
		    }
		]
	    }
	}
    }
}
